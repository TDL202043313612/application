<?xml version="1.0" encoding="utf-8"?>
<com.example.applications.view.SkinNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:background="@drawable/shape_lr_info_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/layout_fall_down"
        tools:layoutAnimation="@null">

        <ImageView
            android:id="@+id/register_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_329dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login4" />


        <LinearLayout
            android:id="@+id/register_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_18dp"
            android:layout_marginTop="@dimen/dimen_150dp"
            android:layout_marginRight="@dimen/dimen_18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_400dp"
                android:background="@drawable/shape_login_form"
                android:gravity="center"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dimen_43dp"
                    android:layout_marginRight="@dimen/dimen_31dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:src="@drawable/phone" />

                    <com.hjq.widget.view.ClearEditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_hint"
                        android:textColorHint="@color/gray"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:background="@null"/>

                </LinearLayout>


                <View
                    style="@style/HorizontalLineStyle"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_23dp"
                    android:layout_marginBottom="@dimen/dimen_23dp"
                    android:layout_marginHorizontal="@dimen/dp_40" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dimen_43dp"
                    android:layout_marginRight="@dimen/dimen_31dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:src="@drawable/verification" />

                    <com.hjq.widget.view.ClearEditText
                        android:id="@+id/et_verification"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_25"
                        android:layout_weight="1"
                        android:hint="@string/verification_hint"
                        android:inputType="number"
                        android:textColorHint="@color/gray"
                        android:textColor="@color/black"
                        android:background="@null"/>

                    <com.hjq.widget.view.CountdownView
                        android:id="@+id/cv_phone_reset_countdown"
                        style="@style/CountdownViewStyle2" />

                </LinearLayout>

                <View
                    style="@style/HorizontalLineStyle"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_23dp"
                    android:layout_marginBottom="@dimen/dimen_23dp"
                    android:layout_marginHorizontal="@dimen/dp_40" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dimen_43dp"
                    android:layout_marginRight="@dimen/dimen_31dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:src="@drawable/account" />

                    <com.hjq.widget.view.ClearEditText
                        android:id="@+id/et_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/account_hint"
                        android:textColorHint="@color/gray"
                        android:textColor="@color/black"
                        android:background="@null"/>
                </LinearLayout>

                <View
                    style="@style/HorizontalLineStyle"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_23dp"
                    android:layout_marginBottom="@dimen/dimen_23dp"
                    android:layout_marginHorizontal="@dimen/dp_40" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dimen_43dp"
                    android:layout_marginRight="@dimen/dimen_31dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:src="@drawable/pwd"
                        />

                    <com.hjq.widget.view.PasswordEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/password_hint"
                        android:textColorHint="@color/gray"
                        android:background="@null"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <View
                    style="@style/HorizontalLineStyle"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginTop="@dimen/dimen_23dp"
                    android:layout_marginBottom="@dimen/dimen_23dp"
                    android:layout_marginHorizontal="@dimen/dp_40" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dimen_43dp"
                    android:layout_marginRight="@dimen/dimen_31dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:src="@drawable/pwd" />

                    <com.hjq.widget.view.PasswordEditText
                        android:id="@+id/et_repassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/re_password_hint"
                        android:textColorHint="@color/gray"
                        android:background="@null"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.hjq.widget.view.SubmitButton
                    android:id="@+id/btn_register"
                    style="@style/RegisterButtonStyle"
                    android:textSize="24sp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="@dimen/dimen_67dp"
                    android:text="âœ”" />
<!--                <Button-->
<!--                    android:id="@+id/btn_login"-->
<!--                    style="@style/LoginButtonStyle"-->
<!--                    android:textSize="24sp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/dp_55"-->
<!--                    android:layout_marginTop="@dimen/dimen_25dp"-->
<!--                    android:text="@string/login_back" />-->
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</com.example.applications.view.SkinNestedScrollView>