<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    指定该样式的父样式，表示该样式继承自 AppCompat 库中的通用对话框样式。-->
    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
<!--        指对话框窗口的背景，这里设置为透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- 其他属性 -->
        <item name="colorSurface">@color/green</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="CustomProgressBar">
        <item name="android:height">1dp</item>
        <!-- 可以添加其他样式属性，根据需要修改 -->
    </style>

    <!-- 默认按钮样式 -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_circle_selector</item>
        <item name="android:foreground">@null</item>
    </style>

    <!--登陆按钮样式 -->
    <style name="LoginButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_circle_selector</item>
        <item name="android:foreground">@null</item>
    </style>

    <!--登陆按钮样式 2-->
    <style name="LoginButtonStyle2" parent="Widget.AppCompat.Button.Borderless">

        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/circle_button_background</item>
        <item name="android:foreground">@null</item>
    </style>
    <!-- 注册按钮样式 -->
    <style name="RegisterButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_circle_selector_red</item>
        <item name="android:foreground">@null</item>
    </style>

    <!-- 注册按钮样式 -->
    <style name="RegisterButtonStyle2" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_circle_selector_red</item>
        <item name="android:foreground">@null</item>
    </style>

    <!-- 默认文本框样式 -->
    <style name="EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColorHint">#A4A4A4</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
    </style>


    <!-- 默认水平分割线样式 -->
    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/common_line_color</item>
    </style>

    <!-- 默认垂直分割线样式 -->
    <style name="VerticalLineStyle">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/common_line_color</item>
    </style>


    <!-- 验证码按钮样式 -->
    <style name="CountdownViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/countdown_selector</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:minWidth">@dimen/dp_90</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/common_code_send</item>
        <item name="android:textColor">@drawable/countdown_color_selector</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
    <style name="CountdownViewStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/countdown_selector</item>
        <item name="android:layout_marginStart">@dimen/dp_7</item>
        <item name="android:layout_marginEnd">@dimen/dp_7</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:minWidth">@dimen/dp_90</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/common_code_send</item>
        <item name="android:textColor">@drawable/countdown_color_selector</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="searchBackground">@color/search_view_theme_primary</item>

        <!-- Change voice icon-->
        <item name="searchVoiceIcon">@drawable/voice_search_inverted</item>

        <!-- Change clear text icon-->
        <item name="searchCloseIcon">@drawable/navigation_close</item>

        <!-- Change up icon-->
        <item name="searchBackIcon">@drawable/navigation_arrow_back</item>

        <!-- Change icon for the suggestions-->
        <item name="searchSuggestionIcon">@drawable/navigation_arrow_right_up</item>

        <!-- Change background for the suggestions list view-->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="android:textColor">@color/theme_primary_text_inverted</item>

        <!-- Change hint text color for edit text-->
        <item name="android:textColorHint">@color/theme_secondary_text_inverted</item>



        <!-- Hint for edit text-->
        <item name="android:hint">@string/search_hint</item>

    </style>

    <color name="search_view_theme_primary">@color/white</color>
    <color name="theme_primary_text_inverted">@color/black</color>
    <color name="theme_secondary_text_inverted">@color/gray</color>
</resources>